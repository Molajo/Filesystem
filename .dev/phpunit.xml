<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Local">
            <directory>./Tests/Local/</directory>
        </testsuite>
        <testsuite name="Ftp">
            <directory>./Tests/Ftp/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">.././</directory>
            <exclude>
                <directory suffix=".php">.././.dev</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
