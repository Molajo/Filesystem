<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="Autoload.php" colors="true">
    <testsuites>
        <testsuite name="Integration">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="junit"
             target="Build/logs/junit.xml"
             logIncompleteSkipped="false"
                />
    </logging>
</phpunit>
